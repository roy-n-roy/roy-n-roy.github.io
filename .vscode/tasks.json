{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "setup-poetry",
			"type": "shell",
			"command": "poetry",
			"args": [ "install", "--no-root" ],
			"options": {
				"cwd": "${workspaceFolder}/release",
			},
			"problemMatcher": [],
		},
		{
			"label": "mkdocs-serve",
			"type": "shell",
			"isBackground": true,
			"command": "poetry",
			"args": [ "run", "mkdocs", "serve", "--config-file", "../mkdocs.yml" ],
			"options": {
				"cwd": "${workspaceFolder}/release"
			},
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^.*(Error|Except).*$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Building documentation.*",
					"endsPattern": ".*Serving on http.*"
				}
			}
		},
		{
			"label": "mkdocs-check-serve",
			"type": "shell",
			"isBackground": true,
			"command": "poetry",
			"args": [ "run", "mkdocs", "serve" ],
			"options": {
				"cwd": "${workspaceFolder}/release"
			},
			"dependsOn":[
				"setup-poetry",
				"mkdocs-stop"
			],
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^.*(Error|Except).*$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Building documentation.*",
					"endsPattern": ".*Serving on http.*"
				}
			}
		},
		{
			"label": "mkdocs-stop",
			"type": "shell",
			"command": "${command:workbench.action.terminal.kill}"
		},
		{
			"label": "mkdocs-deploy",
			"type": "shell",
			"command": "poetry",
			"args": [ "run", "mkdocs", "gh-deploy" ],
			"options": {
				"cwd": "${workspaceFolder}/release"
			},
			"dependsOn":[
				"mkdocs-test"
			],
			"problemMatcher": []
		},
		{
			"label": "mkdocs-test",
			"type": "shell",
			"command": "poetry",
			"args": [ "run", "pytest" ],
			"options": {
				"cwd": "${workspaceFolder}/release"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "git-diff",
			"type": "shell",
			"command": "git",
			"args": [ "diff", "release", "edit", "--name-status", "--", "docs" ],
			"options": {
				"cwd": "${workspaceFolder}/release"
			},
			"problemMatcher": []
		}
	]
}
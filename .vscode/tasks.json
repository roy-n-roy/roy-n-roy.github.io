{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "mkdocs-install",
			"type": "shell",
			"command": "pip install mkdocs mkdocs-material mkdocs-git-revision-date-plugin",
			"problemMatcher": []
		},
		{
			"label": "mkdocs-new",
			"type": "shell",
			"command": "mkdocs new .",
			"dependsOn": [
				"mkdocs-install"
			],
			"problemMatcher": []
		},
		{
			"label": "mkdocs-build",
			"type": "shell",
			"command": "mkdocs build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "mkdocs-serve",
			"type": "shell",
			"isBackground": true,
			"command": "mkdocs serve",
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Building documentation.*",
					"endsPattern": ".*Start detecting changes.*"
				}
			}
		},
		{
			"label": "mkdocs-check-serve",
			"type": "shell",
			"isBackground": true,
			"command": "mkdocs serve",
			"options": {
				"cwd": "${workspaceRoot}/release"
			},
			"dependsOn":[
				"mkdocs-stop"
			],
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Building documentation.*",
					"endsPattern": ".*Start detecting changes.*"
				}
			}
		},
		{
			"label": "mkdocs-stop",
			"type": "shell",
			"command": "${command:workbench.action.terminal.kill}"
		},
		{
			"label": "mkdocs-deploy",
			"type": "shell",
			"command": "mkdocs gh-deploy",
			"options": {
				"cwd": "${workspaceRoot}/release"
			},
			"dependsOn":[
				"mkdocs-test"
			],
			"problemMatcher": []
		},
		{
			"label": "test-env-install",
			"type": "shell",
			"command": "pip install pytest bs4 requests lxml aiohttp[speedups]",
			"problemMatcher": []
		},
		{
			"label": "mkdocs-test",
			"type": "shell",
			"command": "py.test",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
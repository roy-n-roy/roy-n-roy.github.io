{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "setup_pipenv",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"[ ! -e .venv/bin/activate ] && python3 -m venv .venv; python -m pip install -U pip pipenv && pipenv install",
			],
			"windows": {
				"command": "cmd",
				"args": [
					"/c",
					"(if not exist .venv\\Scripts\\activate python -m venv .venv) & python -m pip install -U pip pipenv && pipenv install",
				],
			},
			"options": {
				"env": {
					"VIRTUAL_ENV": "${workspaceFolder}/.venv"
				},
				"cwd": "${workspaceFolder}",
			},
			"problemMatcher": [],
		},
		{
			"label": "mkdocs-build",
			"type": "shell",
			"command": "pipenv run mkdocs build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "mkdocs-serve",
			"type": "shell",
			"isBackground": true,
			"command": "pipenv run mkdocs serve",
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Building documentation.*",
					"endsPattern": ".*Start detecting changes.*"
				}
			}
		},
		{
			"label": "mkdocs-check-serve",
			"type": "shell",
			"isBackground": true,
			"command": "pipenv run mkdocs serve",
			"options": {
				"cwd": "${workspaceRoot}/release"
			},
			"dependsOn":[
				"mkdocs-stop"
			],
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Building documentation.*",
					"endsPattern": ".*Start detecting changes.*"
				}
			}
		},
		{
			"label": "mkdocs-stop",
			"type": "shell",
			"command": "${command:workbench.action.terminal.kill}"
		},
		{
			"label": "mkdocs-deploy",
			"type": "shell",
			"command": "pipenv run mkdocs gh-deploy",
			"options": {
				"cwd": "${workspaceRoot}/release"
			},
			"dependsOn":[
				"mkdocs-test"
			],
			"problemMatcher": []
		},
		{
			"label": "mkdocs-test",
			"type": "shell",
			"command": "pipenv run py.test",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}